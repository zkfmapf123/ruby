<div class="createContainer">
    <div class="createColumn">
        <%=form_tag "/homework/lesson/#{params[:id]}/postCreate", method: :post, multipart: true%>
            <input type="hidden" name="lessonId" value="<%=params[:id]%>">
            <input type="text" name="title" placeholder="제목을 입력해주세요" required=true>
            <textarea name="description" placeholder="올바르지 않은 내용은 삭제될 수 있습니다." required=true></textarea>
            <input type="file" name="image">
            <input type="submit" value="글 쓰기">
        </form>
    </div>
</div>