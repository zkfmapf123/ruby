<div class="formContainer" id="lessonScreen">
    <div class="formColumn">
        <a id="homeworkButton"> 과제공유 버튼으루 </a>
    </div>
    <div class="formColumn">
        <form action="/search">
            <select name="search">
                <option name="title" value="title">수업제목</option>
                <option name="campus" value="campus">캠퍼스</option>
                <option name="target" value="target">대상학년</option>
                <option name="major" value="major">이수구분</option>
            </select>
            <input style="width: 300px" type="text" name="search" placeholder="검색어를 입력하세요" required=true/>
            <input type="submit" value="Enter">
        </form>
    </div>
    <div class="formColumn">
        <a href="/">조회수 순</a>
        <a href="/">공감 순</a>
    </div>
    <div class="formColumn">
        <%@index.each do |item|%>
            <div class="form">
                <a href="lesson/<%=item.id%>/detail"> 
                    <%if item.lesson_evals.empty?%>
                        <div class="rowColumn">
                            <div class="rowColumnColumn">
                                <div class="viewColumnColumn">
                                    <p><%=truncate(strip_tags(item.title), length:20)%></p>
                                    <p><%=item.professor.name%> 교수</p>
                                </div>
                                <div class="commentColumn">
                                    <p>조회 수 <%=item.view%></p>
                                    <p>평가가 필요해요!</p>
                                </div>
                            </div>
                            <div class="rowColumnColumn">
                                <%if item.score == 0%>
                                    <p id="score">평가해 주세요</p>
                                <%else%>
                                    <p id="score">>평가가 필요해요!</p>
                                <%end%>
                                <progress value="0" max="100"></progress>
                                <progress value="0" max="100"></progress>
                                <progress value="0" max="100"></progress>
                                <progress value="0" max="100"></progress>
                            </div>
                        </div>
                        <div class="pointColumn">
                            <p>평가가 필요해요!</p>
                            <p>평가가 필요해요!</p>
                        </div>
                    <%else%>
                        <div class="rowColumn">
                            <div class="rowColumnColumn">
                                <div class="viewColumnColumn">
                                    <p><%=truncate(strip_tags(item.title), length:20)%></p>
                                    <p><%=item.professor.name%> 교수</p>
                                </div>
                                <div class="commentColumn">
                                    <p>조회 수 <%=item.view%></p>
                                    <p><%=item.lesson_evals.order(goodPoint: :desc).first.comment%></p>
                                </div>
                            </div>
                            <div class="rowColumnColumn">
                                <%if item.score == 0%>
                                    <p id="score">평가해 주세요</p>
                                <%else%>
                                    <p id="score">총평 <%=item.score.to_f / item.lesson_evals.count.to_f%></p>
                                <%end%>
                                <progress class="progressbar" value="<%=item.lesson_evals.order(goodPoint: :desc).first.score1%>" max="100"></progress>
                                <div class="proText1">
                                    <p>평가항목</p>
                                </div>
                                <progress class="progressbar" value="<%=item.lesson_evals.order(goodPoint: :desc).first.score2%>" max="100"></progress>
                                <div class="proText2">
                                    <p>평가항목</p>
                                </div>
                                <progress class="progressbar" value="<%=item.lesson_evals.order(goodPoint: :desc).first.score3%>" max="100"></progress>
                                <div class="proText3">
                                    <p>평가항목</p>
                                </div>
                                <progress class="progressbar" value="<%=item.lesson_evals.order(goodPoint: :desc).first.score4%>" max="100"></progress>
                                <div class="proText4">
                                    <p>평가항목</p>
                                </div>
                            </div>
                        </div>
                        <div class="pointColumn">
                            <i class="fas fa-heart"></i>
                            <p><%=item.lesson_evals.order(goodPoint: :desc).first.goodPoint%></p>
                            <i class="far fa-heart"></i>
                            <p><%=item.lesson_evals.order(goodPoint: :desc).first.badPoint%></p>
                        </div>
                    <%end%>
                </a>
            </div>
        <%end%>
    </div>
</div>
<div class="formContainer" id="homeworkScreen">
    <div class="formColumn">
        <a id="lessonButton"> 강의평가 버튼으루</a>
    </div>
    <div class="formColumn">
        <form action="/search">
            <select name="search">
                <option name=""></option>
                <option name=""></option>
                <option name=""></option>
                <option name=""></option>
            </select>
            <input style="width: 300px" type="text" name="search" placeholder="검색어를 입력하세요" required=true/>
            <input type="submit" value="Enter">
    </div>
    <div class="formColumn">
        <a href="/">조회수 순</a>
        <a href="/">공감 순</a>
    </div>
    <div class="formColumn">
        <%@index.each do |item|%>
            <div class="form">
                <a href="homework/<%=item.id%>/detail">
                    <p><%=item.title%></p>
                </a>
            </div>
        <%end%>
    </div>
</div>
<script>
    var lessonScreen = document.getElementById("lessonScreen");
    var homeworkScreen = document.getElementById("homeworkScreen");
    var homeworkButton = document.getElementById("homeworkButton");
    var lessonButton = document.getElementById("lessonButton");

    homeworkButton.addEventListener("click",function(e){
        lessonScreen.style.display = "none";
        homeworkScreen.style.display = "block";
    });

    lessonButton.addEventListener("click",function(e){
        homeworkScreen.style.display="none";
        lessonScreen.style.display="block";
    });


</script>